@model Wp.Web.Mvc.Models.Sections.ContactFormSectionModel

<script src="//cdn.ckeditor.com/4.5.1/standard/ckeditor.js"></script>
<script src="~/ckfinder/ckfinder.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.WebPageId)

        @(Html.LocalizedEditor<ContactFormSectionModel, ContactFormLocalizedModel>("contactform-info-localized",
    @<div>
        <div class="form-group">
            @Html.HiddenFor(model => model.Locales[item].LanguageId);
            @Html.LabelFor(model => model.Locales[item].Subject, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Locales[item].Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Locales[item].Subject)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Locales[item].IntroText, new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <textarea id="ckeditor_IntroText_@Model.Locales[item].LanguageId" class="ckeditor" rows="10" name="Locales[@item].IntroText">@Model.Locales[item].IntroText</textarea>
                <script type="text/javascript">
                    var editor = CKEDITOR.replace('ckeditor_IntroText_@Model.Locales[item].LanguageId',
                        {
                            toolbar: 'CustomBasic',
                            height: 150,
                            width: 500
                        });
                </script>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Locales[item].ThankYouText, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <textarea id="ckeditor_ThankYouText_@Model.Locales[item].LanguageId" class="ckeditor" rows="10" name="ThankYouText">@Model.ThankYouText</textarea>
                <script type="text/javascript">
                    var editor = CKEDITOR.replace('ckeditor_ThankYouText_@Model.Locales[item].LanguageId',
                        {
                            toolbar: 'CustomBasic',
                            height: 150,
                            width: 500
                        });
                </script>
            </div>
        </div>
    </div>
            ,
    @<div>
        <div class="form-group">
            @Html.LabelFor(model => model.Subject, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Subject)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IntroText, new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <textarea id="ckeditor_IntroText" class="ckeditor" rows="10" name="IntroText">@Model.IntroText</textarea>
                <script type="text/javascript">
                    var editor = CKEDITOR.replace('ckeditor_IntroText',
                        {
                            toolbar: 'CustomBasic',
                            height: 150,
                            width: 500
                        });
                </script>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ThankYouText, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <textarea id="ckeditor_ThankYouText" class="ckeditor" rows="10" name="ThankYouText">@Model.ThankYouText</textarea>
                <script type="text/javascript">
                    var editor = CKEDITOR.replace('ckeditor_ThankYouText',
                        {
                            toolbar: 'CustomBasic',
                            height: 150,
                            width: 500
                        });
                </script>
            </div>
        </div>
    </div>
            ))

        <div class="form-group">
            @Html.LabelFor(model => model.EmailTo, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.EmailTo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EmailTo)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EmailCc, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.EmailCc, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EmailCc)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EmailBcc, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.EmailBcc, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EmailBcc)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <button type="submit" class="btn btn-default" name="submitType" value="@SubmitType.Save">@T("Common.Save")</button>
                <button type="submit" class="btn btn-default" name="submitType" value="@SubmitType.Cancel">@T("Common.Cancel")</button>
                <button type="submit" class="btn btn-default" name="submitType" value="@SubmitType.Cancel">@T("Common.ViewMode")</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="//cdn.ckeditor.com/4.5.1/standard/ckeditor.js"></script>
}
