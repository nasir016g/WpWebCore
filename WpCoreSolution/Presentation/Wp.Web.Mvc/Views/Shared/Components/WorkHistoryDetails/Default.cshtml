                    <a href="mailto:@Model.Email">@Model.Email</a>
                    <br />
                    <abbr title="Website"><strong>W: </strong></abbr>
                    <a href="@Model.Website">Website</a><br>
                </address>*@

            <div class="row">
                <div class="col-md-12 text-left" style="margin-top:20px;">
                    <h4>// @Html.DisplayNameFor(model => model.Skills)</h4>

                    <div class="row">
                        <div class="col-md-12">
                            <partial name="~/Views/Sections/WorkHistory/_Skill.cshtml" model="Model.Skills">
                        </div>
                    </div>
                    <br />
                </div>
            </div>

        </div>
    </div>
</div>

