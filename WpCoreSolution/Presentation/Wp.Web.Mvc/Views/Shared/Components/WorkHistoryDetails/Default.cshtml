                    <strong>@Html.DisplayFor(model => model.Name)</strong><br>
                    @Html.DisplayFor(model => model.Address)
                    <br>
                    @Html.DisplayFor(model => model.PostalCode), @Html.DisplayFor(model => model.Town)
                </address>*@
