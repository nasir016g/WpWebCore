@model Nsr.RestClient.Models.ActivityLogs.ActivityLog

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBootstrap.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ActivityLog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EntityId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EntityId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EntityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EntityName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOnUtc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOnUtc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityLogType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityLogType.Id)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.ActivityLogItems.First().OldValue)
            </th>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.ActivityLogItems.First().NewValue)
            </th>
            <th>
                Diff
            </th>
             
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.ActivityLogItems) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OldValue)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.NewValue)
                </td>  
                <td class="text-break">
                  @Html.Raw(item.Diff)
                  </td>
                 
            </tr>
            @*<tr>
                <td colspan="2" class="text-break">
                  @Html.Raw(item.Diff)
                  </td>
            </tr>*@
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
