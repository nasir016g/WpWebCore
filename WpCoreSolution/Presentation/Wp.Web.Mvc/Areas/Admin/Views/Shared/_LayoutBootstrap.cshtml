<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wp.Web.Mvc</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link href="~/lib/jqueryui/themes/base/jquery-ui.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Website</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="WebPage" asp-action="Index"><i class="fas fa-bars"></i> Pages</a>
                        </li>

                        <!-- Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                <i class="fas fa-lock"></i> Security
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Security" asp-action="RoleIndex"><i class="fas fa-users-cog"></i> Roles</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Security" asp-action="UserIndex"><i class="fas fa-users"></i>Users</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                <i class="fas fa-cogs"></i> Configurations <b class="caret"></b>
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Localization" asp-action="Index"><i class="fa fa-globe"></i> Languages</a>
                                <div class="dropdown-divider"></div>
                                <div class="dropdown-header">SETTINGS</div>                             
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Website" asp-action="Website">Edit</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Setting" asp-action="Localization">Localization</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="CustomAttribute" asp-action="Index">Custom attributes</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                <i class="fas fa-lock"></i> Profile
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Profile" asp-controller="Resume" asp-action="Index"><i class="fas fa-users-cog"></i> Work History</a>
                            </div>
                        </li>   

                        @*  <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-asterisk"></i> Miscellaneous <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                    </ul>
                                </li>

                            </ul>*@

                        @*<div class="col-md-2 pull-right" style="top:5px;"> @Html.Action("LanguageSelector", "Common", new { Area = "" })</div>*@
                        @*@Html.Partial("_LoginPartial")*@

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notifications" />
            @RenderBody()
        </main>
    </div>
    <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>

