@model Nsr.Common.Core.Models.ResumeModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBootstrap.cshtml";
}

<h4>Edit Resume</h4>
<hr />
<form asp-action="Edit">

    @(Html.LocalizedEditor<ResumeModel, ResumeLocalizedModel>("info-localized",

    @<div>
        <div class="form-row mt-4">
            @Html.HiddenFor(model => model.Locales[item].LanguageId)
            @Html.LabelFor(model => model.Locales[item].Summary, new { @class = "col-form-label col-sm-2 text-truncate" })
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.Locales[item].Summary, 10, 10, new { @class = "form-control" })
            </div>
        </div>
    </div>
,
    @<div>
    <div class="row mt-4">
    <div class="col-md-12">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <label asp-for="Summary" class="col-form-label col-sm-2 text-truncate"></label>
                <div class="col-sm-6">
                    @Html.TextAreaFor(model => model.Summary, 10, 10, new { @class = "form-control" })
                </div>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>

            <div class="form-row">
                <label asp-for="Name" class="col-form-label col-sm-2 text-truncate"></label>
                <div class="col-sm-6">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                </div>
                <div class="form-row">
                <label asp-for="DateOfBirth" class="col-form-label col-sm-2 text-truncate"></label>
                <div class="col-sm-6">
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
                <div class="form-row">
                    <label asp-for="Address" class="col-form-label col-sm-2 text-truncate"></label>
                    <div class="col-sm-6">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    </div>
                <div class="form-row">
                    <label asp-for="PostalCode" class="col-form-label col-sm-2 text-truncate"></label>
                    <div class="col-sm-6">
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    </div>
                <div class="form-row">
                    <label asp-for="Town" class="col-form-label col-sm-2 text-truncate"></label>
                    <div class="col-sm-6">
                        <input asp-for="Town" class="form-control" />
                        <span asp-validation-for="Town" class="text-danger"></span>

                    </div>
                    </div>
                <div class="form-row">
                    <label asp-for="Phone" class="col-form-label col-sm-2 text-truncate"></label>
                    <div class="col-sm-6">
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    </div>
                <div class="form-row">
                    <label asp-for="Mobile" class="col-form-label col-sm-2 text-truncate"></label>
                    <div class="col-sm-6">
                        <input asp-for="Mobile" class="form-control" />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                    </div>
                <div class="form-row">
                    <label asp-for="Email" class="col-form-label col-sm-2 text-truncate"></label>
                    <div class="col-sm-6">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    </div>
                <div class="form-row">
                    <label asp-for="Website" class="col-form-label col-sm-2 text-truncate"></label>
                    <div class="col-sm-6">
                        <input asp-for="Website" class="form-control" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>
                    </div>
                <div class="form-row">
                    <label asp-for="LinkedIn" class="col-form-label col-sm-2 text-truncate"></label>
                    <div class="col-sm-6">
                        <input asp-for="LinkedIn" class="form-control" />
                        <span asp-validation-for="LinkedIn" class="text-danger"></span>
                    </div>
                    </div>

                <div class="form-row">
                    <label asp-for="ApplicationUserName" class="col-form-label col-sm-2 text-truncate"></label>
                    <div class="col-sm-6">
                        <input asp-for="ApplicationUserName" class="form-control" />
                        <span asp-validation-for="ApplicationUserName" class="text-danger"></span>
                    </div>
                    </div>
                <div class="form-row">
                    <div class="offset-2 col-sm-6 text-right mt-2">
                        <a asp-action="Index">@T("Common.Back")</a>
                        <input type="submit" value="@T("Common.Save")" class="btn btn-primary" />
                    </div>
                    </div>
                </div>
        </div>
    </div>
   ))
    </form>


