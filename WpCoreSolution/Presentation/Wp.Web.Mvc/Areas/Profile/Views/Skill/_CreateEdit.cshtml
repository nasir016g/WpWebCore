@model Nsr.RestClient.Models.WorkHistories.SkillModel

 @Html.AntiForgeryToken()
 @Html.ValidationSummary(true) 
 @Html.HiddenFor(model => model.ResumeId)

@(Html.LocalizedEditor<SkillModel, SkillLocalizedModel>("info-localized",
    @<div class="form-group">
         @Html.HiddenFor(model => model.Locales[item].LanguageId);
        @Html.LabelFor(model => model.Locales[item].Name, new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Locales[item].Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Locales[item].Name)
        </div>
    </div> 

    ,
    @<div>
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>
         <div class="form-group">
             @Html.LabelFor(model => model.DisplayOrder, new { @class = "col-md-1 control-label" })
             <div class="col-md-3">
                 @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control", type = "number", style = "width: 80px;" })
                 @Html.ValidationMessageFor(model => model.DisplayOrder)
             </div>
         </div>
    </div>

    ))


    <div class="form-group">
        <div class="col-md-offset-1 col-md-3">
            <input class="btn btn-danger" type="submit" value="Save" />
            @Html.ActionLink("Back to list", "Index", new { ResumeId = Model.ResumeId }, new { @class = "btn btn-default" })
        </div>
    </div>
