@model Nsr.Common.Core.Models.EducationModel

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.ResumeId)

@(Html.LocalizedEditor<Nsr.Common.Core.Models.EducationModel, EducationLocalizedModel>("info-localized",
    @<div class="form-group">
        @Html.HiddenFor(model => model.Locales[item].LanguageId)
        @Html.LabelFor(model => model.Locales[item].Name, new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Locales[item].Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Locales[item].Name)
        </div>
    </div>
            ,
            @<div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
                              ))


<div class="form-group">
    <div class="col-md-offset-1 col-md-3">
        <input class="btn btn-danger" type="submit" value="@T("Common.Save")" />
        @Html.ActionLink("Back to list", "Index", new { ResumeId = Model.ResumeId }, new { @class = "btn btn-default" })
    </div>
</div>
